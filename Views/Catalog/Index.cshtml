@model RegistryClient.Models.Catalog.ImageListViewModel
@{
    ViewData["Title"] = "Catalog";
}
<section class="py-3">
    <div class="container">
        <h1>Catalog</h1>
        <p class="lead">Docker images catalog.</p>
        <div class="row">
          <div class="col-sm-12 mx-auto">
            <div class="card card-signin my-3">
              <div class="card-body">
                <!-- <h5 class="card-title text-center">Application configurations</h5> -->

                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Image Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var name in Model.Images)
                        {
                            <tr>
                                <td><a href="/Catalog/@name">@name</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
</section>
